@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@{
	var communityMeetingId = "CommunityMeeting".Equals(Pageview.Page.get_Value("PageItemType")) ? Pageview.Page.get_Value("PageItemId") : null;
}

@if (communityMeetingId != null)
{
	if (GetString("ItemCreator:Edit.Status") == "ITEM_CREATED")
	{
		<div class="alert alert-success">
			<h1>Thank you</h1>
		</div>
	}
	else { 
	if (GetString("ItemCreator:Edit.Status") != "NEW_SESSION")
	{
		<div class="alert alert-warning">
			Please check you input
		</div>
	}
	<div class="form-horizontal">
		@GetValue("ItemCreator:Edit.Form.Begin")
		<div style="display: none">
			<input type="hidden" name="CommunityMeeting" value="@communityMeetingId" />
			<input type="hidden" name="TargetPageID" value="@Pageview.Page.ID" />
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<input type="text" name="Name" class="form-control" placeholder="Name" value='@GetValue("ItemCreator:Edit.Item.Name.Value")' />
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Email</label>
			<div class="col-sm-10">
				<input type="text" name="Email" class="form-control" placeholder="Email" value='@GetValue("ItemCreator:Edit.Item.Email.Value")' />
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-2 control-label">Company</label>
			<div class="col-sm-10">
				<input type="text" name="Company" class="form-control" placeholder="Company" value='@GetValue("ItemCreator:Edit.Item.Company.Value")' />
			</div>
		</div>

		<button class="btn btn-primary">Sign up</button>

		@GetValue("ItemCreator:Edit.Form.End")
	</div>
	}
}
	